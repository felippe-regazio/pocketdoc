<head>
  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">

  {{#unless pageData.metadata.noAutoMetaSeo }}
    {{> metaseo}}
  {{/unless}}
 
  <title>
    {{#if page.metadata.title}}
      {{{page.metadata.title}}}
    {{else}}
      Doc
    {{/if}}
  </title>

  <style>
    {{config.baseCss}}
    {{config.hsltCss}}

    html, body {
      margin: 0;
      padding: 0;
      scroll-behavior: smooth;
    }

    :root {
      --header-height: 56px;
      --pm-app-surface-color: #fff;
      --default-border-color: rgba(100,100,100,.3);
      --pm-pre-max-height: unset;      
  
      {{config.theme}}
    }

    header.page-header {
      position: fixed;
      top: 0;
      left: 0;
      width: 100%;
      z-index: 10;
      background-color: var(--pm-app-surface-color);
      border-bottom: solid 1px var(--default-border-color);
    }

    header.page-header > section {
      height: 100%;
      display: -webkit-box;
      display: -ms-flexbox;
      display: flex;
      -webkit-box-align: center;
      -ms-flex-align: center;
      align-items: center;
      height: var(--header-height);
      -webkit-box-pack: justify;
      -ms-flex-pack: justify;
      justify-content: space-between;
      padding: 0 var(--pm-app-container-padding);
    }

    header.page-header > section .page-header__title-a {
      color: currentColor;
      text-transform: uppercase;
      font-family: var(--pm-font-family-primary);
    }    

    header.page-header > section p {
      margin: 0;
      font-weight: 700;
      color: currentColor;
      text-transform: uppercase;
      font-family: var(--pm-font-family-primary);
    }

    div.page-holder {
      overflow: auto;
      position: relative;
      padding-top: var(--header-height);
      min-height: calc(100vh - var(--header-height));
    }

    div.page-holder.page-holder--with-sidebar {
      padding-left: 300px;
    }

    div.page-holder aside.page-sidebar {
      left: 0;
      width: 100%;
      overflow: auto;
      max-width: 300px;
      z-index: 1;
      position: fixed;
      -webkit-transition: 200ms ease-in-out;
      -o-transition: 200ms ease-in-out;
      transition: 200ms ease-in-out;
      bottom: 0;
      height: calc(100vh - var(--header-height));
      border-right: solid 1px var(--default-border-color);
    }

    div.page-holder aside.page-sidebar .page-sidebar__content {
      width: 100%;
    }

    div.page-holder aside.page-sidebar ul {
      margin: 0;
    }

    div.page-holder aside.page-sidebar ul li {
      margin: 0;
      width: 100%;
      display: -webkit-box;
      display: -ms-flexbox;
      display: flex;
      -webkit-box-align: cente;
      -ms-flex-align: cente;
      align-items: cente;
      padding: 14px;
    }

    div.page-holder aside.page-sidebar ul li a {
      width: 100%;
      height: 100%;
    }

    div.page-holder aside.page-sidebar ul li:hover {
      cursor: pointer;
      background-color: rgba(100,100,100,.1);
    }

    div.page-holder aside.page-sidebar ul .active {
      font-weight: 700;
    }

    div.page-holder .page-content {
      width: 100%;
      padding-top: 24px;
    }

    div.page-holder .page-content main {
      padding-bottom: 24px;
      min-height: calc(100vh - var(--header-height));
    }

    footer.page-footer {
      border-top: solid 1px var(--default-border-color);
      background-color: var(--pm-app-surface-color);
    }

    footer.page-footer > section {
      padding: 14px 28px;
      min-height: var(--header-height);
    }

    code .hljs-ln {
      opacity: .5;
      width: 34px;
      margin-right: 12px;
      display: inline-flex;
      font-size: 11px;
      align-items: center;
      height: 100%;
      line-height: normal;
    }

    {{#if page.metadata.noCodeLineNumbers}}
      code .hljs-ln {
        display: none;
      }
    {{else}}
      pre > code:before {
        content: '';
        position: absolute;
        height: 100%;
        border-right: solid 1px currentColor;
        top: 0;
        left: 50px;
        opacity: 0.4;
      }
    {{/if}}

    @media screen and (max-width: 1345px) {
      div.page-holder {
        padding-left: 0;
      }

      div.page-holder aside.page-sidebar {
        left: -100%;
      }
    }
  </style>

  {{{config.autoInclude.head}}}
</head>