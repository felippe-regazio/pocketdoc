{{#unless page.metadata.seo.title}}
  <meta property="og:title" content="{{page.metadata.seo.title}}">
  <meta name="twitter:title" content="{{page.metadata.seo.title}}">
{{else}}
  <meta property="og:title" content="{{page.metadata.title}}">
  <meta name="twitter:title" content="{{page.metadata.title}}">
{{/unless}}

<meta name="author" content="{{page.metadata.seo.author}}">
<meta name="description" content="{{page.metadata.seo.description}}">
<meta name="twitter:card" content="{{page.metadata.seo.imageUrl}}">
<meta name="twitter:site" content="@{{page.metadata.seo.twitterUser}}">
<meta name="twitter:creator" content="{{page.metadata.seo.twitterUser}}">
<meta name="twitter:description" content="{{page.metadata.seo.description}}">
<meta name="twitter:image:src" content="{{page.metadata.seo.imageUrl}}">
<meta property="og:type" content="article">
<meta property="og:url" content="{{page.metadata.seo.pageUrl}}">
<meta property="og:image" content="{{page.metadata.seo.imageUrl}}"/>
<meta property="og:description" content="{{page.metadata.seo.description}}">
<meta property="og:site_name" content="{{page.metadata.seo.twitterUser}}">
